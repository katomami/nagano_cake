<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-4 mt-1">
      <div class="test"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</div>
    </div>
    <div class="col-7"></div>
  </div>
  <%= form_with model:@customer,url:admin_customer_path,method: :patch, local:true do |f| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-3">会員ID</div>
    <div class="col-9 mt-3"><%= @customer.id %></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-3">
      <%= f.label :image,'氏名' %>
    </div>
    <div class="col-9 mt-3">
      <%= f.text_field:last_name %><span style="margin-right: 20px;"></span><%= f.text_field:first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <%= f.label :image,'フリガナ' %>
    </div>
    <div class="col-9 mt-1">
      <%= f.text_field:last_name_kana %><span style="margin-right: 20px;"></span><%= f.text_field:first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <%= f.label :image,'郵便番号' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:postal_code %>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <%= f.label :image,'住所' %>
    </div>
    <div class="col-9 mt-1">
      <%= f.text_field:address, :size=>"60" %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <%= f.label :image,'電話番号' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:telephone_number %>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <%= f.label :image,'メールアドレス' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:email %>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <%= f.label:is_active,'会員ステータス' %>
    </div>
    <div class="col-5">
      <%= f.radio_button:is_active, true %>
      <%= f.label:is_active,'有効',value:true %>
　    <%= f.radio_button:is_active, false %>
      <%= f.label:is_active,'退会',value:false %>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-5 mt-1">
      <%= f.submit"変更を保存",class:'btn btn-success' %>
    </div>
    <div class="col-4"></div>
  </div>
  <% end %>
</div>