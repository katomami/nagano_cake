<div class="box2">
  <div class="box3">
    <div class="test">会員一覧</div>
    <table class="table">
      <thead class="table-light">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td scope="row"><%= customer.id %></td>
          <td>
            <%= link_to customer.last_name+customer.first_name, admin_customer_path(customer),class:"test4" %>
          </td>
          <td><%= customer.email %></td>
          <% if customer.is_active == true %>
          <td>
            <font color=silver><b>退会</b></font>
          </td>
          <% else %>
          <td>
            <font color=green><b>有効</b></font>
          </td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
    <%= paginate @customers %>
  </div>
</div>