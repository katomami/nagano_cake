<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-2">
      <div class="test">ジャンル一覧・追加</div>
    </div>
    <div class="col-8"></div>
  </div>
  <%= form_with model:@genre,url:'/admin/genres',local:true do |f| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-3">
      <%= f.label :name,'ジャンル名' %>
    </div>
    <div class="col-2 mt-3">
      <%= f.text_field:name %>
    </div>
    <div class="col-1"></div>
    <div class="col-2 mt-3">
      <%= f.submit"新規登録",class:'btn btn-success' %>
    </div>
    <div class="col-4"></div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-4 mt-4">
    <table class="table">
      <thead class="table-light">
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to"編集する",edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
    <div class="col-7"></div>
  </div>
</div>