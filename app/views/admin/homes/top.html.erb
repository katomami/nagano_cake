<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-1">
      <div class="test">注文履歴一覧</div>
    </div>
    <div class="col-9"></div>
  </div>
  
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
    <table>
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>

      </thead>
      <tbody>
        
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td>
          <% array=[] %>
          <% order.order_details.each do |good| %>
          <% array<<good.amount %>
          <% end %>
          <%= array.sum %>
          </td>
        <% end %>
        </tr>
      </tbody>
    </table>

    </div>
  </div>
</div>