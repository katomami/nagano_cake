<div class="box2">
  <div class="box3">
    <div class="test">商品編集</div>
    <%= form_with model:@item,url:admin_item_path, local:true do |f| %>
      <%= f.label :image,'商品画像' %>
      <%= f.attachment_field:image %><br>
      <%= f.label :name,'商品名' %>
      <%= f.text_field:name %><br>
      <%= f.label :introduction,'商品説明' %>
      <%= f.text_area:introduction %><br>
      <%= f.label :genre,'ジャンル' %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %><br>
      <%= f.label :price,'税抜価格' %>
      <%= f.text_field:price %><a>円</a><br>
      <%= f.label:is_active,'販売ステータス' %>
      <%= f.radio_button:is_active, true %>
      <%= f.label:is_active,'販売中',value:true %>
      <%= f.radio_button:is_active, false %>
      <%= f.label:is_active,'販売停止中',value:false %><br>
      <%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
    <% end %>
  </div>
</div>


