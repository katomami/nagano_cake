<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 mt-2">
      <div class="test">商品一覧</div>
    </div>
    <div class="col-6"></div>
    <div class="col-1 mt-2">
      <a href="/admin/items/new"class="btn btn-white rounded-circle p-0 shadow-sm text-secondary"style="width:2rem;height:2rem;"role="button">＋</a>
    </div>
    <div class="col-2"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 mt-2">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td scope="row"><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id),class:"test4" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
            <td><font color=green><b>販売中</b></font></td>
            <% else %>
            <td><font color=silver><b>販売停止中</b></font></td>
            <% end %>

          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
    <div class="col-1"></div>
  </div>
  <div class="row">
    <div class="col-5"></div>
    <div class="col-7">
      <%= paginate @items %>
    </div>
  </div>
</div>