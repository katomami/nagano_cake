<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
  <h4>商品一覧</h4>
    </div>
    <div class="col-1">
      <a href="/admin/items/new"class="btn btn-white rounded-circle p-0 shadow-sm text-secondary"style="width:2rem;height:2rem;"role="button">＋</a>

    </div>
  </div>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td scope="row"><%= item.id %></td>


            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
              <p>販売中</p>
              <% else %>
              <p>販売停止中</p>
              <% end %>
            </td>


          </tr>
        </tbody>
        <% end %>

      </table>
      <%= paginate @items %>
</div>