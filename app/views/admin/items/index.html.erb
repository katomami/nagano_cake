<div class="container">
  <h4>商品一覧</h4>
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td scope="row"><%= item.id %></td>
          
            
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
              <p>販売中</p>
              <% else %>
              <p>販売停止中</p>
              <% end %>
            </td>
        
            
          </tr>
        </tbody>
        <% end %>
          
      </table>
      <%= paginate @items %>
</div>