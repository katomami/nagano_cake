

  <div class="container">

    <%= form_with model:@item,url:'/admin/items',local:true do |f| %>

        <h4>商品新規登録</h4>
      <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-1">
          <%= f.label :image,'商品画像' %>
        </div>
        <div class="col-md-7 ml-1">
          <%= f.attachment_field:image %>
        </div>
      </div>



      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-1">
          <%= f.label :name,'商品名' %>
        </div>
        <div class="col-md-7 ml-1">
          <%= f.text_field:name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-1">
          <%= f.label :introduction,'商品説明' %>
        </div>
        <div class="col-md-7 ml-1">
          <%= f.text_area:introduction %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-1">
          <%= f.label :ジャンル %>
        </div>
        <div class="col-md-7 ml-1">
          <%= f.select :genre, ['ケーキ','プリン','焼き菓子','キャンディ'],{include_blank:'--選択してください--'} %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-1">
          <%= f.label :price,'税抜価格' %>
        </div>
        <div class="col-md-7 ml-1">
          <%= f.text_field:price %><a>円</a>
        </div>

      </div>


      <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-9">
          <%= f.label:販売ステータス %>


          <%= f.radio_button:is_active, true %>
          <%= f.label:is_active,'販売中',value:true %>


          <%= f.radio_button:is_active, false %>
          <%= f.label:is_active,'販売停止中',value:false %>
        </div>
      </div>




      <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-7">
          <%= f.submit"新規登録",class:'btn btn-success' %>
        </div>
      </div>
    <% end %>

  </div>




