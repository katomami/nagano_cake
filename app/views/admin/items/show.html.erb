<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <h4>商品詳細</h4>
      <br>
    </div>
  </div>




  <div class="row">
      <div class="col-4">



        <%= attachment_image_tag @item, :image, format: 'jpeg', size:"250x150" %>

      </div>
      <div class="col-1"></div>


      <div class="col-7">
        <table>
        <tr>
          <td>商品名</td><td><%=@item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td><td><%=@item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td><td><%=@item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td><td><% included = @item.price*1.1%><%= included.round %>(<%=@item.price.round%>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><% if @item.is_active %><font size="4" color="green">販売中</font><% else %><font size="4" color="green">販売停止中</font><% end %></td>
        </tr>

        </table>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-10">
          <%= link_to"編集する",edit_admin_item_path(@item.id), class:"btn btn-sm btn-success" %>
        </div>
      </div>


      </div>
  </div>
</div>


