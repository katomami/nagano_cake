<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2 mt-2">
    <div class="test">管理者ログイン</div>
    </div>
    <div class="col-8"></div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
    <table cellpadding="10" width="80%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <tr>
      <div class="field">
      <td><%= f.label :メールアドレス %></td>
      <td><span style="margin-right:2em;"></span><%= f.email_field :email,:size=>"50", autofocus: true, autocomplete: "email" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
      <td><%= f.label :パスワード %></td>
      <td><span style="margin-right:2em;"></span><%= f.password_field :password,:size=>"50",autocomplete: "current-password" %></td>
      </div>
    </tr>

    <tr>
      <div class="actions">
      <td></td><td height="80"><span style="margin-right:2em;"></span><%= f.submit "ログイン",class:'btn btn-sm btn-primary' %></td>
      </div>
    </tr>
    <% end %>
    </table>
    </div>
  </div>
  <%= render "admin/shared/links" %>

</div>
