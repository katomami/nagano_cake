<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10 mt-4">
    <font size="4">会員情報編集</font>
    </div>
  </div>
  <%= form_with model:@customer,url:customers_update_path,method: :patch, local:true do |f| %>
  <div class="row">

    <div class="col-1"></div>
    <div class="col-3 mt-3">
      <%= f.label :image,'氏名' %>
    </div>
    <div class="col-8 mt-3">
      <%= f.text_field:last_name %><span style="margin-right: 40px;"></span><%= f.text_field:first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-1">
      <%= f.label :image,'フリガナ' %>
    </div>
    <div class="col-8 mt-1">
      <%= f.text_field:last_name_kana %><span style="margin-right: 40px;"></span><%= f.text_field:first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-1">
      <%= f.label :image,'郵便番号' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:postal_code %>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-1">
      <%= f.label :image,'住所' %>
    </div>
    <div class="col-8 mt-1">
      <%= f.text_field:address, :size=>"60" %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-1">
      <%= f.label :image,'電話番号' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:telephone_number %>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-1">
      <%= f.label :image,'メールアドレス' %>
    </div>
    <div class="col-5 mt-1">
      <%= f.text_field:email %>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-3 mt-1">
      <%= f.submit"編集内容を保存",class:'btn btn-success' %>
    </div>
    <div class="co-2"></div>
    <div class="col-3 mt-1">
      <%= link_to"退会する",customers_unsubscribe_path,class:"btn btn-sm btn-danger" %>
    </div>
  </div>

  <% end %>
</div>
