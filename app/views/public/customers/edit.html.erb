<div class="box2">
  <div class="box3">
    <font size="4">会員情報編集</font>
    <%= form_with model:@customer,url:customers_update_mypage_path,method: :patch, local:true do |f| %>
      <%= f.label :image,'氏名' %>
      <%= f.text_field:last_name %><span style="margin-right: 40px;"></span><%= f.text_field:first_name %><br>
      <%= f.label :image,'フリガナ' %>
      <%= f.text_field:last_name_kana %><span style="margin-right: 40px;"></span><%= f.text_field:first_name_kana %><br>
      <%= f.label :image,'郵便番号' %>
      <%= f.text_field:postal_code %><br>
      <%= f.label :image,'住所' %>
      <%= f.text_field:address, :size=>"60" %><br>
      <%= f.label :image,'電話番号' %>
      <%= f.text_field:telephone_number %><br>
      <%= f.label :image,'メールアドレス' %>
      <%= f.text_field:email %><br>
      <%= f.submit"編集内容を保存",class:'btn btn-success' %>
      <%= link_to"退会する",customers_unsubscribe_path,class:"btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>