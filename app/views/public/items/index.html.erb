<div class="box2">
  <div class="box3">
    <font>商品一覧(全<%= Item.count %>件)</font>
    <div class="container">
      <% @items.each do |item| %>
　　    <div class="item">
　　      <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', size:"170x120" %><br>
          <% end %>
          <font size="2"><%=item.name %></font><br>
          <font size="2">¥<%=item.price %></font><br>
        </div>
      <% end %>
    </div>
    <%= paginate @items %>
  </div>
</div>

