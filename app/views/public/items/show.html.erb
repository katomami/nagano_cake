<div class="container">
  <div class="row ">
    <div class="col-2"></div>
    <div class="col-4 mt-5">
     <%= attachment_image_tag @item, :image, format: 'jpeg', size:"300x200" %>
    </div>
    
    <div class="col-1"></div>
    <div class="col-5 mt-5">
    
    <table>
        <tr>
          <td><font size="6"><%=@item.name %></font></td>
        </tr>
        <tr>
          <td><font size="5"><%=@item.introduction %></font></td>
        </tr>  
        <tr>
          <td><font size="5">¥<% included = @item.price*1.1 %><%= included.round %>(税込)</font></td>
        </tr>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7"></div>
    <div class="col-5">
      <%= form_with model:@cart_item,url:cart_item_path, local:true do |f| %>  
      <%= f.select :amount, [['1', 1], ['2',2]], {include_blank:'個数選択'} %>
        
      <span style="margin-right: 32px;"></span><%= f.submit"カートに入れる", class:"btn btn-sm btn-success" %>
    <% end %>
    </div>
  </div>
</div>



