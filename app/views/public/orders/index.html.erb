<div class="box2">
  <div class="box3">
    <h4>注文履歴一覧</h4>
    <table border="1" width="100%" cellpadding="10">
      <thead>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |good| %>
              <%= good.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to"表示する",orders_show_path(order), method: :get,class:"btn btn-sm btn-primary" %></td>
      <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>