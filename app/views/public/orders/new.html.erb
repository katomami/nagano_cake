<div class="box2">
  <div class="container">
    <h4>注文情報入力</h4>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-11">
        <%= form_with model:@order,url:orders_confirm_path(@order), method: :post, local:true do |f| %>
        <font size="4">支払方法</font><br>
        <span style="margin-right: 20px;"></span><%= f.radio_button :payment_method, :credit_card, checked: "checked" %>
        <%= f.label :payment_method, "クレジットカード" %><br>
        <span style="margin-right: 20px;"></span><%= f.radio_button :payment_method, :transfer %>
        <%= f.label :payment_method, "銀行振込" %><br>
        <font size="4">お届け先</font><br>
        <span style="margin-right: 20px;"></span><%= f.radio_button :select_address, 0, checked:"checked" %>
        <%= f.label :select_address, "ご自身の住所" %><br>
        <span style="margin-right: 40px;"></span><font>〒</font><%= current_customer.postal_code %>
        <%= current_customer.address %><br>
        <span style="margin-right: 40px;"></span><%= current_customer.last_name+current_customer.first_name %><br>
        <span style="margin-right: 20px;"></span><%= f.radio_button :select_address, 1 %>
        <%= f.label :select_address, "登録済住所から選択" %><br>
        <span style="margin-right: 40px;"></span><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %><br>
        <span style="margin-right: 20px;"></span><%= f.radio_button :select_address, 2 %>
        <%= f.label :select_address, "新しいお届け先" %><br>
        <span style="margin-right: 40px;"></span><%= f.label :image,'郵便番号(ハイフンなし)' %>
        <%= f.text_field:postal_code %><br>
        <span style="margin-right: 40px;"></span><%= f.label :image,'住所' %>
        <span style="margin-right: 140px;"></span><%= f.text_field:address, :size=>"60" %><br>
        <span style="margin-right: 40px;"></span><%= f.label :image,'宛名' %>
        <span style="margin-right: 140px;"></span><%= f.text_field:name %><br>
        <p class="content1"><%= f.submit"確認画面へ進む",class:'btn btn-primary' %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>