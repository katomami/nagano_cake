<h2>注文情報入力</h2>
<%= form_with model:@order,url:orders_confirm_path, method: :post, local:true do |f| %>
<p>支払方法</p><br>
<%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
<%= f.label :payment_method, "クレジットカード" %>
<br>
<%= f.radio_button :payment_method, :銀行振込 %>
<%= f.label :payment_method, "銀行振込" %>
<br>
<p>お届け先</p>
<br>
<%= f.radio_button :select_address, 0, checked:"checked" %>
<%= f.label :select_address, "ご自身の住所" %>
<%= @order.postal_code %>
<%= @order.address %>
<br>
<%= @order.name %>
<br>
<%= f.radio_button :select_address, 1 %>
<%= f.label :select_address, "登録済住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
<br>
<%= f.radio_button :select_address, 2 %>
<%= f.label :select_address, "新しいお届け先" %>
<br>
<%= f.label :image,'郵便番号(ハイフンなし)' %>
<%= f.text_field:postal_code %>
<br>
<%= f.label :image,'住所' %>
<%= f.text_field:address, :size=>"60" %>
<br>
<%= f.label :image,'宛名' %>
<%= f.text_field:name %>
<br>
<%= f.submit"確認画面に進む",class:'btn btn-primary' %>
<% end %>