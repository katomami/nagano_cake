<div class="box2">
  <div class="box3">
    <div class="test">新規会員登録</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <div class="field">
        <td><%= f.label :名前 %></td>
        <td>(姓)</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "name" %><span style="margin-right:2em;"></span>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "name" %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
        <td><%= f.label :フリガナ %></td>
        <td>(セイ)</td>
        <td><%= f.text_field :last_name_kana, autofocus: true %><span style="margin-right:1em;"></span>(メイ)<%= f.text_field :first_name_kana, autofocus: true %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
        <td><%= f.label :メールアドレス %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete:"postal_code" %></td>
      </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :住所 %></td>
        <td></td>
        <td><%= f.text_field :address, :size=>"60", autofocus: true, autocomplete:"address" %></td>
      </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete:"telephone_number" %></td>
      </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em></td>
        <% end %>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :'パスワード(確認用)' %></td>
        <td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </div>
      </tr>
      <tr>
      <div class="actions">
        <td></td>
        <td></td><td><%= f.submit "新規登録",class:"btn btn-sm btn-success" %></td>
      </div>
      </tr>
    </table>
    <% end %>
    <font size="4">既に登録済みの方</font>
    <%= render "public/shared/links" %><font>からログインしてください。</font>
  </div>
</div>